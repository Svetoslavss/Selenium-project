pipeline {
    agent any

    environment {
        DOTNET_VERSION = '6.0.x'
    }

    stages {
        stage('Checkout repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Svetoslavss/Selenium-project.git'
            }
        }

     
        stage('Restore dependencies') {
            steps {
                bat 'dotnet restore --verbosity normal'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --no-restore'
            }
        }

        stage('Run tests for Project1') {
            steps {
                echo 'Run the unit tests for project1'
                bat 'dotnet test TestProject1.csproj --no-build --verbosity normal'
            }
        }

        stage('Run tests for Project2') {
            steps {
                echo 'Run the unit tests for project2'
                bat 'dotnet test TestProject2.csproj --no-build --verbosity normal'
            }
        }

        stage('Run tests for Project3') {
            steps {
                echo 'Run the unit tests for project3'
                bat 'dotnet test TestProject3.csproj --no-build --verbosity normal'
            }
        }
    }

    post {
        always {
            echo 'Tests are completed!'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Tests failed!'
        }
    }
}
